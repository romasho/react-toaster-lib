{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "declarationDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "src/custom.d.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx"
  ]
}
